<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:focusable="false"
              android:clickable="false"
              android:background="@drawable/selector_node_list"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/feedback_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size_three"
            android:textColor="#8f8f8f"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <TextView
            android:id="@+id/feedback_customer"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size_four"
            android:textColor="#8f8f8f"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/feedback_ismartv"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/font_size_four"
            android:textColor="#ff8400"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

</LinearLayout>
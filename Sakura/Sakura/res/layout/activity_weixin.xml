<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/weixin_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="100dp"
                  android:id="@+id/weixin_ic" android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginTop="50dp"    android:layout_marginLeft="100dp"
            >
        <ImageView


                android:src="@drawable/ic_stat"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        <TextView android:layout_width="wrap_content"
                  android:textSize="34sp"
                  android:layout_marginLeft="50dp"
                  android:textColor="@android:color/white"
                  android:text="@string/weixin_helper"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/weixin_devide"
                  android:orientation="horizontal"
                  android:layout_below="@id/weixin_ic"
            >


        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/qr_code_help"
                android:textSize="28sp"
                android:layout_width="600dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_width="630dp"
                            android:layout_height="630dp"
                            android:layout_marginTop="20dp"
                            android:background="#5e5e5e"
                    >
                <ImageView

                        android:layout_centerInParent="true"
                        android:id="@+id/weixin_qr_code"
                        android:layout_width="600dp"
                        android:layout_height="600dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/device_code_help"
                android:textSize="28sp"
                android:layout_width="600dp"
                android:layout_height="100dp"/>

        <TextView

                android:background="#7e7e7e"
                android:id="@+id/device_code"
                android:textSize="34sp"
                android:text="@string/device_code"
                android:gravity="center"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:layout_width="600dp"
                android:layout_height="100dp"/>

            <ImageButton
                    android:background="@drawable/weixin_exit_selector"
                    android:id="@+id/weixin_exit"
                    android:textSize="38sp"
                android:layout_width="400dp"
                android:layout_height="100dp"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
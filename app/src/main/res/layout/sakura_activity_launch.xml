<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/sakura_background"
              android:gravity="center"
    >

    <ImageView
        android:id="@+id/tmp"
        android:layout_width="@dimen/tmp"
        android:layout_height="@dimen/tmp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="#00000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/sakura_launch_icon_margin_left"
            android:layout_marginRight="@dimen/sakura_launch_icon_margin_right"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/indicator_node_image"
                android:layout_width="@dimen/sakura_launch_icon_width"
                android:layout_height="@dimen/sakura_launch_icon_height"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/indicator_node_image"
                android:src="@drawable/sakura_selector_indicator_node"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_indicator_marginTop"
                android:text="@string/indicator_node"
                android:textColor="#ffffff"
                android:textSize="@dimen/home_indicator_textSize"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/sakura_launch_icon_margin_left"
            android:layout_marginRight="@dimen/sakura_launch_icon_margin_right"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/indicator_feedback_image"
                android:layout_width="@dimen/sakura_launch_icon_width"
                android:layout_height="@dimen/sakura_launch_icon_height"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/sakura_selector_indicator_feedback"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_indicator_marginTop"
                android:text="@string/indicator_feedback"
                android:textColor="#ffffff"
                android:textSize="@dimen/home_indicator_textSize"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/sakura_launch_icon_margin_left"
            android:layout_marginRight="@dimen/sakura_launch_icon_margin_right"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/indicator_help_image"
                android:layout_width="@dimen/sakura_launch_icon_width"
                android:layout_height="@dimen/sakura_launch_icon_height"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/sakura_selector_indicator_help"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_indicator_marginTop"
                android:text="@string/indicator_help"
                android:textColor="#ffffff"
                android:textSize="@dimen/home_indicator_textSize"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/message_pop_width"
              android:layout_height="@dimen/app_update_message_pop_height"
              android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_update_pop_text_layout_height"
        android:background="#d6dbeb"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_update_title_marginBottom"
            android:layout_marginTop="@dimen/app_update_title_marginTop"
            android:gravity="center"
            android:text="@string/app_update_title"
            android:textColor="#787878"
            android:textSize="@dimen/textSize_30sp"/>

        <LinearLayout
            android:id="@+id/app_update_content_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_pop_btn_height"
            android:background="#5266a5"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="@dimen/pop_cursor_btn_width"
                android:layout_height="@dimen/pop_cursor_btn_height"
                android:background="@drawable/pop_btn_bg"
                android:text="@string/confirm_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_30sp"
                />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/pop_cursor_btn_width"
                android:layout_height="@dimen/pop_cursor_btn_height"
                android:layout_marginLeft="@dimen/app_pop_btn_margin_lr"
                android:background="@drawable/pop_btn_bg"
                android:text="@string/cancel_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_30sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/pop_cursor"
            android:layout_width="@dimen/pop_cursor_width"
            android:layout_height="@dimen/pop_cursor_height"
            android:layout_alignParentTop="true"
            android:src="@drawable/message_pop_cursor"/>

    </RelativeLayout>

</LinearLayout>

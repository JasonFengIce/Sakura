<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background">
	<LinearLayout
	    android:layout_width="960dip"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center|top"
	    android:id="@+id/left_side">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dip"
        	android:layout_marginBottom="20dip"
        	android:layout_marginLeft="50dip"
        	android:layout_marginRight="50dip"
	        android:id="@+id/status_tips"
	        android:text="@string/ready_to_test"
	        android:textSize="44sp"/>
	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/speed_actionbutton"
	        android:text="@string/StartTesting"/>
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="600dip"
	        android:id="@+id/test_status_holder">
	        <LinearLayout
		        android:layout_width="600dip"
		        android:layout_height="600dip"
		        android:layout_marginTop="40dip"
		        android:layout_marginLeft="10dip"
		        android:id="@+id/speedtest_area"
		        android:orientation="vertical"
		        android:gravity="top"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"></LinearLayout>
	        <RelativeLayout
	            android:layout_width="360dip"
	            android:layout_height="600dip"
	            android:layout_marginRight="40dip"
	            android:layout_marginTop="40dip"
	            android:id="@+id/graphic_holder"
	            android:orientation="vertical"
	            android:gravity="top"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentRight="true">
		        <ImageView
		            android:layout_width="360dip"
		            android:layout_height="360dip"
		            android:layout_margin="0dip"
		            android:layout_alignParentRight="true"
		            android:layout_alignParentLeft="true"
			        android:src="@drawable/dashboard"
			        android:id="@+id/status_icon"/>
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignTop="@id/status_icon"
		            android:layout_alignLeft="@id/status_icon"
		            android:layout_marginLeft="120dip"
		            android:layout_marginTop="160dip"
		            android:textSize="30dip"
		            android:textColor="#FFFFFFFF"
		            android:id="@+id/speed_indicator_text"
		            android:text="- - - -. - -"></TextView>
		        <ProgressBar
			        android:layout_width="360dip"
			        android:layout_height="25dip"
			        android:layout_below="@id/status_icon"
			        android:layout_alignParentLeft="true"
			        android:id="@+id/current_progress"
			        style="@android:style/Widget.ProgressBar.Horizontal"
			        android:progressDrawable="@drawable/progress"
			        android:visibility="invisible"
			        android:layout_marginTop="20dip"
			        android:layout_marginBottom="40dip"
			        android:layout_marginLeft="50dip"
			        android:layout_marginRight="50dip"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="35sp"
	        android:id="@+id/suggestion_text"/>
	</LinearLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/feedback_area"
	    >
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/model_sn_show_area"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:orientation="vertical"
	        android:gravity="left"
	        android:layout_marginTop="40dip"
	        android:layout_marginRight="40dip">
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/sn_show"
		        android:textSize="30sp"/>
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/model_show"
		        android:textSize="30sp"/>
	    </LinearLayout>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="50dip"
	        android:layout_marginLeft="40dip"
	        android:layout_marginBottom="40dip"
	        android:id="@+id/label_feedback1"
	        android:textSize="44sp"
	        android:text="@string/label_problem_description"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/problem_options"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/label_feedback1"
            android:gravity="center"
            android:layout_margin="20dip"
            android:checkedButton="@id/problem_other"
            >
		    <RadioButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/problem_unclear"
		        android:textSize="26sp"
		        android:text="@string/radiobutton_unclear"/>
		    <RadioButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/problem_block"
		        android:textSize="26sp"
		        android:text="@string/radiobutton_block"/>
		    <RadioButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/problem_hardware"
		        android:textSize="26sp"
		        android:text="@string/radiobutton_hardware_fault"/>
		    <RadioButton
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@id/problem_other"
		        android:textSize="26sp"
		        android:text="@string/radiobutton_others"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/problem_options"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:text="@string/label_details"
            android:textSize="26sp"
            android:id="@+id/details_description"
            />
        <EditText
            android:id="@+id/edit_details"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:layout_below="@id/problem_options"
            android:layout_toRightOf="@id/details_description"
            android:layout_marginTop="10dip"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dip"
            android:textSize="26sp"
            android:inputType="textMultiLine"
            android:gravity="top|left">
        </EditText>
        <LinearLayout
            android:id="@+id/user_info_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/edit_details"
            android:layout_alignParentRight="true"
            android:layout_margin="10dip">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textSize="26sp"
            android:text="@string/label_phonenum"/>
            <EditText
            android:id="@+id/edit_phonenum"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textSize="26sp"
            android:inputType="textPhonetic|phone"
            android:gravity="left"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_margin="5dip"
            android:text="@string/label_email"/>
            <EditText
            android:id="@+id/edit_email"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textSize="26sp"
            android:inputType="textEmailAddress"
            android:gravity="left"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feedback_autogain_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_info_area"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="@string/label_ip"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:id="@+id/feedback_ip"
                android:text="@string/default_ip"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="@string/label_city"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:id="@+id/feedback_city"
                android:text="@string/unknown_area"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:text="@string/label_ISP"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:id="@+id/feedback_isp"
                android:text="@string/unknown_isp"
                android:textSize="26sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/feedback_verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_autogain_area"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dip"
            android:textSize="26sp"
            android:text="@string/location_verify_title"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_verify_options"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/feedback_autogain_area"
            android:layout_toRightOf="@id/feedback_verify_title"
            android:checkedButton="@id/feedback_verify_yes">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/feedback_verify_yes"
                android:textSize="26sp"
                android:text="@string/label_yes"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feedback_verify_no"
                android:textSize="26sp"
                android:text="@string/label_no"/>
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_verify_options"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="400dip"
            android:layout_marginTop="40dip"
            android:id="@+id/button_submit"
            android:textSize="30sp"
            android:text="@string/button_submit"/>
	</RelativeLayout>
</LinearLayout>